# Database settings
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/qagentic

# Individual database settings (used as fallback if DATABASE_URL is not set)
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=qagentic

# API settings
API_HOST=0.0.0.0
API_PORT=8082
LOG_LEVEL=INFO

# CORS settings
ALLOW_ORIGINS=http://ui:3000,http://api:8080
ALLOW_ORIGIN_REGEX=
ALLOW_CREDENTIALS=true
ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Analytics settings
EMBEDDING_MODEL=all-MiniLM-L6-v2
CLUSTERING_ALGORITHM=hdbscan
CLUSTERING_MIN_CLUSTER_SIZE=3
CLUSTERING_MIN_SAMPLES=1
CLUSTERING_EPSILON=0.5

# Feature toggles
ENABLE_FLAKE_DETECTION=true
ENABLE_ROOT_CAUSE_ANALYSIS=true
ENABLE_TREND_ANALYSIS=true
