# Local Development Configuration

# Database settings - LOCAL
DATABASE_URL=postgresql://postgres:password@localhost:5432/qagentic

# Redis settings - LOCAL
REDIS_URL=redis://localhost:6379/0

# API settings
API_HOST=0.0.0.0
API_PORT=8083
LOG_LEVEL=INFO
DEBUG=true

# CORS settings
ALLOW_ORIGINS=http://localhost:3000,http://localhost:8080

# Analytics settings
EMBEDDING_MODEL=all-MiniLM-L6-v2
CLUSTERING_ALGORITHM=hdbscan
CLUSTERING_MIN_CLUSTER_SIZE=3
CLUSTERING_MIN_SAMPLES=1
CLUSTERING_EPSILON=0.5

# Feature toggles
ENABLE_FLAKE_DETECTION=true
ENABLE_ROOT_CAUSE_ANALYSIS=true
ENABLE_TREND_ANALYSIS=true
